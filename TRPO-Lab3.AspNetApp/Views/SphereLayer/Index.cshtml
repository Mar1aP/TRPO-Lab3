@model TRPO_Lab3.AspNetApp.Models.SphereLayerViewModel

@{
    ViewData["Title"] = "SphereLayerView";
}

<h1>Расчёт объёма шарового слоя</h1>
<img src="@Url.Content("~/images/SphereLayer.png")"/>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Radius1" class="control-label"></label>
                <input asp-for="Radius1" class="form-control" />
                <span asp-validation-for="Radius1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Radius2" class="control-label"></label>
                <input asp-for="Radius2" class="form-control" />
                <span asp-validation-for="Radius2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume" class="control-label"></label>
                <input asp-for="Volume" class="form-control" />
                <span asp-validation-for="Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<img src="@Url.Content("~/images/Formula.png")"/>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
